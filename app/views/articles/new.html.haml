.allWrapper
  = render 'shared/header'
  .editor
    %form.editor__form
      .editor__content
        .editor__title
          %input.form__control{placeholder: 'タイトル'}
        .editor__body
          .editor__body__text
            %textarea.editor__body__textarea{placeholder: 'プログラミング知識をMarkdown記法で書いて共有しよう'}
      .editor__footer
        .editor__footer__save
          .image__picker
            %input.footer__image{type: "file"}
            %i.fa.fa-picture-o
          = button_tag "Qiitaに投稿", class: 'editor__footer__save__submit'
